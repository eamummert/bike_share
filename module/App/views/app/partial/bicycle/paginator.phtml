	<a href="<?= $this->url('app/gps/bike', ['bike-id' => $item->getId()]) ?>">GPS</a> |
	<a href="<?= $this->url('app/bicycles/history', ['bike-id' => $item->getId()]) ?>">History</a>
<?php elseif ($column == 'actions'): ?>
	<?php if ($dock = $item->getDock()): ?>
		<?php if (!$item->isLocked() && !$dock->isLocked()): ?>
			<a href="<?= $this->url('app/bicycles/checkout', ['bike-id' => $item->getId()]) ?>">Check-Out</a> |
		<?php endif ?>
	<?php else: ?>
		<a href="<?= $this->url('app/bicycles/checkin', ['bike-id' => $item->getId()]) ?>">Check-In</a> |
	<?php endif ?>
