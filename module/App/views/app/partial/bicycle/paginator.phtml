<?php if ($column == 'id'): ?>
	<?= $item->getId() ?>
<?php elseif ($column == 'dock'): ?>
	<?php if ($dock = $item->getDock()): ?>
		<?= $dock->getName() ?>
		<?php if ($dock->isLocked()): ?>
			( Locked ) 
		<?php endif ?>
	<?php else: ?>
		N/A
	<?php endif ?>
